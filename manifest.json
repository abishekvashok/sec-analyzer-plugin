{
    "manifest_version": 3,
    "name": "Security Analyzer",
    "version": "0.1",
    "description": "A plugin that can detect security issues while you casually browse the internet",
    "permissions": [
        "webRequest",
        "*://*"
    ],
    "background": {
        "service_worker": "scripts/x-frame-options.js"
    },
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "images/icon-16.png",
            "32": "images/icon-32.png",
            "48": "images/icon-48.png",
            "128": "images/icon-128.png"
        }
    }
}
